@model DataModels.Models.Student

@{
    ViewData["Title"] = "Search";
}

<h1>@ViewData["Title"]</h1><br/><br/>
<h3><a asp-controller="Student" asp-action="AllRides">See all Rides Posted</a></h3>

<fieldset>
    @using (Html.BeginForm())
    {
        <p>
            @Html.LabelFor(model => model.Start)
            @Html.EditorFor(model => model.Start)
           
        </p>
        <p>
            @Html.LabelFor(model => model.Dest)
            @Html.EditorFor(model => model.Dest)
        </p>
       @if (ViewBag.Message != null)
       {
<script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.Message");
    };
    </script>
       }

        <button type="submit" >Submit</button>

    }


</fieldset>

@if (Model != null)
{
    <hr />
    <h1>Profile</h1>

    <h2>@Model.Email</h2>

    <h3>Number: @Model.Start to @Model.Dest</h3>


}



